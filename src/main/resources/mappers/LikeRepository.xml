<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.LikeRepository">


	<select id="getLikeCountByArticleId" parameterType="int"
		resultType="int">
		SELECT COUNT(*)
		FROM `like`
		WHERE articleId = #{articleId}
	</select>

	<select id="setLike" parameterType="map">
		INSERT INTO `like`
		SET
		articleId = #{articleId},
		memberId = #{memberId}
	</select>

	<select id="existLikeById" parameterType="map"
		resultType="com.example.demo.vo.Like">
		SELECT *
		FROM `like`
		WHERE articleId = #{articleId} AND memberId = #{memberId}
	</select>

	<select id="deleteLike" parameterType="map">
		DELETE FROM `like`
		WHERE
		articleId = #{articleId} AND memberId = #{memberId}
	</select>
</mapper>